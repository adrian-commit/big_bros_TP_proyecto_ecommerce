<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./includes/head")%>
    <link href="/static/css/home.css"  rel="stylesheet">
 

   </head>

 <body>
    <%- include("./includes/header")%>
     
    <main>
     <section id="slider">
        <ul id="slides">
            <li id="slide-1" class="slide"><img src="/static/images/banner-01.jpg" alt=""></li>
            <li id="slide-2" class="slide"><img src="/static/images/banner-02.jpg" alt=""></li>
            <li id="slide-3" class="slide"><img src="/static/images/banner-03.jpg" alt=""></li>
        </ul>
        <nav id="menu">
            <a href="#slide-1"></a>
            <a href="#slide-2"></a>
            <a href="#slide-3"></a>
        </nav>
     </section>
   
   
        <p id="titulo">Productos Destacados</p>
    
        <% if (productos.length > 0) {%>
            <ul class="productos">
              <%productos.forEach(producto => {%>
                <li>
                    <figure>
                        <img src="/static/products/<%= producto.product_image.url %>" alt="<%= producto.name %> Big Bros">    
                    </figure>                        
                            <section class="caracteristicas-p item">
                                <p class="titulo item-titulo"><%= producto.name%></p>
                                <select class="cantidad item-cantidad" name="cantidad" id="cantidad" aria-checked="3">
                                    <option value="1" selected>1</option>
                                    <% for( let i = 2; i <= 10; i++ ) { %>       
                                    <option value="<%= i %>"><%= i %></option>        
                                    <% } %>             
                                </select>              
                                <button class="agregarCarrito item-agregarCarrito">Agregar al carrito</button>             
                                <p class="precio item-precio">$<%= producto.price%></p>    
                                       
                                    
                                       <section id="share">
                                           <a href=" "><i class="fas fa-share-alt"></i></a>
                                           <a href="https://www.instagram.com/?hl=es-la"><i class="fab fa-instagram"></i></a>
                                           <a href="https://twitter.com/"><i class="fab fa-twitter"></i></a>
                                           <a href="https://www.facebook.com/"><i class="fab fa-facebook"></i></a>
                                       </section>
                                   
                            </section> 
                </li>
                <% }) %>
            </ul>
            <% } else {%>
                <h2 class="p-null">no se encontro ning√∫n producto</h2>
                <% } %> 
        
    </main>
 
    <%- include("./includes/footer")%>

    <script src="/static/js/carrito.js"></script>
 </body>
</html>