<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./includes/head")%>
    <link href="/static/css/home.css"  rel="stylesheet">
 

   </head>

 <body>
    <%- include("./includes/header")%>
     
    <main>
     <section id="slider">
        <ul id="slides">
            <li id="slide-1" class="slide"><img src="/static/images/banner-01.jpg" alt=""></li>
            <li id="slide-2" class="slide"><img src="/static/images/banner-02.jpg" alt=""></li>
            <li id="slide-3" class="slide"><img src="/static/images/banner-03.jpg" alt=""></li>
        </ul>
        <nav id="menu">
            <a href="#slide-1"></a>
            <a href="#slide-2"></a>
            <a href="#slide-3"></a>
        </nav>
     </section>
   
   
        <p id="titulo">Productos Destacados</p>
    
        <% if (productos.length > 0) {%>
            <ul class="productos">
              <%productos.forEach(producto => {%>
                <li>
                    <figure>
                        <img src="/static/products/<%= producto.product_image.url %>" alt="<%= producto.name %> Big Bros">    
                    </figure>                        
                            <section class="caracteristicas-p item">
                                <p class="titulo item-titulo"><%= producto.name%></p>
                                <select class="cantidad item-cantidad" name="cantidad" id="cantidad" aria-checked="3">
                                    <option value="1">1</option>        
                                </select>              
                                <button class="agregarCarrito item-agregarCarrito">Agregar al carrito</button>             
                                <p class="precio item-precio">$<%= producto.price%></p>    
                                       
                                    
                                       <section id="share">
                                           <a href=" "><i class="fas fa-share-alt"></i></a>
                                           <a href="https://www.instagram.com/?hl=es-la"><i class="fab fa-instagram"></i></a>
                                           <a href="https://twitter.com/"><i class="fab fa-twitter"></i></a>
                                           <a href="https://www.facebook.com/"><i class="fab fa-facebook"></i></a>
                                       </section>
                                   
                            </section> 
                </li>
                <% }) %>
            </ul>
            <% } else {%>
                <h2 class="p-null">no se encontro ningún producto</h2>
                <% } %> 
                <section class="carrito">
                    <section class="menuDesplegable">
                        <button class="seguir">Seguir</button>
                        <button class="verDetalle">
                            Ver Detalle
                        </button>
                        <ul class="detalle">
                            <li class="items">
                                <p class="nombre">Producto</p>
                                <p class="cantidad">Cant.</p>
                                <p class="precio">Precio</p>
                            </li>
                        </ul>
                        <section class="envio">
                            <section class="opcionRetirar">
                                    <p class="label1opcionRetirar" for="opcionRetirar">Paso a retirar</p>
                                    <p class="label2opcionRetirar" for="opcionRetirar">Resistencia,Chaco,Argentina</p>
                            </section>
                            <section class="opcionEnviar">
                                    <p class="label1opcionEnviar" for="opcionEnviar">Quiero que me lo envíen</p>
                                    <p class="label2opcionEnviar" for="opcionEnviar">Envio a coordinar por whatsaap</p>
                            </section>
                            <form class="retirar">
                                <input type="text" class="nombre" placeholder="Nombre">
                                <input type="text" class="telefono" placeholder="Telefono">
                            </form>
                            <form class="enviar">
                                <input type="text" class="nombre" placeholder="Nombre">
                                <input type="text" class="telefono" placeholder="Telefono">
                                <input type="text" class="Direccion" placeholder="Direccion">
                            </form>
                        </section>
                    </section>
                    <section class="menu">
                        <p class="icono"><i class="fas fa-shopping-cart"></i></p>
                        <p class="nombreMenu">Siguiente</p>
                        <p class="precioTotal">($ )</p>
                    </section>
                </section>
    </main>
 
    <%- include("./includes/footer")%>

    <script src="/static/js/carrito.js"></script>
    <script src="/static/js/tienda.js"></script>
 </body>
</html>