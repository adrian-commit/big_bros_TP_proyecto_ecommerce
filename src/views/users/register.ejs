<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../includes/head")%>
        <link href="/static/css/register.css"  rel="stylesheet">
        <link href="/static/css/header.css"  rel="stylesheet">
        <link href="/static/css/footer.css"  rel="stylesheet">
    </head>
   


    <body>
        <%- include("../includes/header")%>

  
 <main>
    <section>
        <h3 class="title">Registro</h3>
        <form class="register" action="/users/guardar" method="post" enctype="multipart/form-data" >
            
            <fieldset>
                <label for="name"><b>Nombre y Apellido</b></label>
                <input type="text" name="name" placeholder="Nombre y apellido" class=" <%= locals.errors && errors.name ? 'is-invalid' : null %> " >
                <% if (locals.errors && errors.name) { %>
                    <section class="text-danger">
                        <%= errors.name.msg %> 
                    </section>
                <% } %>
            </fieldset> 
            <fieldset>
                <label for="userName"><b>Nombre de Usuario</b></label>
                <input type="text" name="userName" placeholder="Nombre de usuario" class="is-invalid">
                <% if (locals.errors && errors.userName) { %>
                    <section class="text-danger">
                        <%= errors.userName.msg %> 
                    </section>
                <% } %>
            </fieldset>
            <fieldset>
                <label for="email"><b>Email</b></label>
                <input type="email" name="email" placeholder="E-mail" >
                <% if (locals.errors && errors.email) { %>
                    <section class="text-danger">
                        <%= errors.email.msg %> 
                    </section>
                <% } %>
            </fieldset>
            <fieldset>
                <label for="password"><b>Contraseña</b></label>
                <input type="password" name="password" placeholder="Contraseña" >
                <% if (locals.errors && errors.password) { %>
                    <section class="text-danger">
                        <%= errors.password.msg %> 
                    </section>
                <% } %>
            </fieldset>
            <fieldset>
                <label for="telefono"><b>Teléfono</b></label>
            <input type="number" name="telephone" placeholder="Teléfono">
            <% if (locals.errors && errors.telephone) { %>
                <section class="text-danger">
                    <%= errors.telephone.msg %> 
                </section>
            <% } %>
            </fieldset>
            <fieldset>
                <label for="birthDate"><b>Fecha de nacimiento</b></label>
                <input type="date" name="birthDate" id="birth_date" >
                <% if (locals.errors && errors.birthDate) { %>
                    <section class="text-danger">
                        <%= errors.birthDate.msg %> 
                    </section>
                <% } %>
            </fieldset>
            <fieldset>
                <label for="address"><b>Dirección</b></label>
                <input type="text" name="address" placeholder="Domicilio">
                <% if (locals.errors && errors.address) { %>
                    <section class="text-danger">
                        <%= errors.address.msg %> 
                    </section>
                <% } %>
            </fieldset>
            <fieldset>
                <label for="avatar"><b>Imagen de Perfil</b></label>
                <input type="file" name="avatar" id="avatar"> 
            </fieldset>
            <fieldset>
                <button type= "submit">Enviar</button>
            </fieldset> 
        </section>
    </main>


    
</body>
</html>