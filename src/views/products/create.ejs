<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../includes/head")%>
    <link href="/static/css/createUpdate.css"  rel="stylesheet">
</head>
<body>

    <%- include("../includes/header")%>
    <p class="title">nuevo producto</p>
  <form class="create" action="/productos/guardar" enctype="multipart/form-data" method="post" novalidate>
       <fieldset class="name">
          <label for="name">Nombre</label>
          <input type="text" 
          name="name"
          id="name"
          class=" <%= locals.errors && errors.name ? "invalid" : null %> " 
          value="<%= locals.oldData ? oldData.name : null %>"
          >
          <% if (locals.errors && errors.name) { %>
            <section class="text-danger">
                <%= errors.name.msg %> 
            </section>
        <% } %>
        </fieldset>
      <fieldset class="description">
          <label for="description">Descripción</label>
          <textarea name="description" 
          id="description" 
          cols="30" 
          rows="10"
          class=" <%= locals.errors && errors.description ? "invalid" : null %> " 
          value="<%= locals.oldData ? oldData.description : null %>"
          ></textarea>
          <% if (locals.errors && errors.description) { %>
            <section class="text-danger">
                <%= errors.description.msg %> 
            </section>
        <% } %>
        </fieldset>
      <fieldset class="price">
          <label for="price">Precio</label>
          <input type="number" min="1" name="price" id="price">
        </fieldset>
        <fieldset class="amount">
            <label for="amount">Cantidad</label>
            <input type="number" min="1" max="100" name="amount" id="amount">
          </fieldset>
      <fieldset class="stock">
          <label for="stock">Stock</label>
          <input type="range" min="1" max="100" name="stock" id="stock">
        </fieldset>
        <fieldset class="image">
          <label for="product">Imagen</label>
          <input type="file" 
          name="product" 
          id="product"
          class=" <%= locals.errors && errors.product ? "invalid" : null %> "
          >
          <% if (locals.errors && errors.product) { %>
            <section class="text-danger">
                <%= errors.product.msg %> 
            </section>
        <% } %> 
        </fieldset>
        <fieldset> 
          <label for="category">Categoría</label>
          <select name="category" id="category">
           <option value="1">Alfajores</option>
           <option value="2">Budines</option>
           <option value="3">Pan Dulce</option>
           <option value="4">Cookies</option>
          </select> 
        </fieldset>
      <fieldset> 
          <button type="submit">Guardar</button>
      </fieldset>
  </form>        
</body>
  <%- include("../includes/footer")%> 
  <script src="/static/js/productValidations.js"></script>
</html> 